div(ng-controller='lobbyPageController')
	nav.navbar.navbar-inverse.navbar-fixed-top
		div.navbar-header
			div.navbar-brand{{username}}
			button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse', ng-click="directory()")
				span.icon-bar
				span.icon-bar
				span.icon-bar
			div#logoutButton
				a.btn.btn-warning(ng-click="logout()") Log out
		div.navbar-collapse.collapse
			ul.nav.navbar-nav
				li#onlineUser(ng-repeat="onlineitem in onlineitems | orderBy: 'username'") {{onlineitem.username}}
				li#offlineUser(ng-repeat="offlineitem in offlineitems | orderBy: 'username'") {{offlineitem.username}}
	div#scrollingMessages
		div.messages.msg(ng-repeat="msg in messages") 
			div.timestamp {{ getPresentableTime(msg.createdAt) }}
			div.username {{ msg.author}}
		div {{ msg.content}}
		div.input-group(style='position:inherit; width:100%')
			input.form-control(type='text',style='width:80%', ng-model="messageInput")
			button.btn.btn-warning(type='button', style='width:20%', ng-click="send()") Send