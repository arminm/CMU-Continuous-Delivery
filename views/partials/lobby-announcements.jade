div(ng-controller='announcementsController')
  nav.navbar.navbar-inverse.navbar-fixed-top
    div.navbar-header
      div
        a.btn.glyphicon.glyphicon-circle-arrow-left#backtolobbyButton(ui-sref='lobby')
      div.navbar-brand Announcements
      div
        a.btn.glyphicon.glyphicon-off#logoutButton(ng-click='logout()')
  div#scrollingAnnouncements
    div.input-group#postAnnouncementForm
      input.form-control(type='text',style='width:90%', ng-model='announcementInput')
      button.btn.btn-warning(type='button', style='width:10%', ng-click='post()') Post
    div.announcements.announcement(ng-repeat="announcement in announcements") 
      div.timestamp {{ getPresentableTime(announcement.createdAt) }}
      div.username {{ announcement.author}}
    div {{ announcement.content}}